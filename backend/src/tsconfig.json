{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2017",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		// "strict": true, //TODO try to compile strict
		"outDir": "./dist",
		"baseUrl": "./ts",
		"paths": {
			"@core/*": ["core/*"],
			"@modules/*": ["modules/*"]
		}
	},
	"include": ["ts/**/*"],
	"exclude": ["node_modules"]
}
